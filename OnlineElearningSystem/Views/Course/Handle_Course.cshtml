@model IEnumerable<OnlineElearningSystem.Entity.Course>

@{
	ViewBag.Title = "Handle_Course";
}

<h2>Handle_Course</h2>
@Html.ActionLink("Back", "Home", "User")

<table>
	<tr>
		<th>CourseId</th>
		<th>CourseName</th>
	</tr>
	@foreach (OnlineElearningSystem.Entity.Course item in Model)
	{
		<tr>
			<td>
				@item.courseId
			</td>
			<td>
				@item.courseName
			</td>

			<td>
				@Html.ActionLink("Edit", "Edit", new { courseId = item.courseId })
				@Html.ActionLink("Delete", "Delete", new { id = item.courseId })
			</td>

		</tr>
	}
</table>


