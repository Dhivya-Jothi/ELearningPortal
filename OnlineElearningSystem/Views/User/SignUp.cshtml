@model OnlineElearningSystem.Models.UserDetailModel

@{
	ViewBag.Title = "SignUp";
}

<h2>SignUp</h2>

@Html.ValidationSummary(true)
@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{

	<table  class="HeadTags" >
		@{
			Html.RenderPartial("Eportal");
		}
		<tr>
			<td>userName</td>
			<td >
				@Html.TextBoxFor(model => model.userName,new { @maxlength = "50" })
				@Html.ValidationMessageFor(model => model.userName,"",new { style="color:red"} ) 
			</td>
		</tr>
		<tr>
			<td>password</td>
			<td >
				@Html.PasswordFor(model => model.password, new { @maxlength = "30" })
				@Html.ValidationMessageFor(model => model.password,"", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>confirmPassword</td>
			<td >
				@Html.PasswordFor(model => model.confirmPassword, new { @maxlength = "30" })
				@Html.ValidationMessageFor(model => model.confirmPassword, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>gender</td>
			<td >
				@Html.RadioButtonFor(m => m.gender, "Male")Male
				@Html.RadioButtonFor(m => m.gender, "Female")Female

			</td>
		</tr>
		<tr>
			<td>mobileNumber</td>
			<td >
				@Html.TextBoxFor(model => model.mobileNumber, new { @maxlength = "10" })
				@Html.ValidationMessageFor(model => model.mobileNumber, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>mailId</td>
			<td>
				@Html.TextBoxFor(model => model.mailId, new { @maxlength = "100" })
				@Html.ValidationMessageFor(model => model.mailId, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>dateOfBirth</td>
			<td >
				@Html.TextBoxFor(model => model.dateOfBirth, new { @maxlength = "30" })
				@Html.ValidationMessageFor(model => model.dateOfBirth, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>mediumOfStudy</td>
			<td >
				@Html.TextBoxFor(model => model.mediumOfStudy, new { @maxlength = "15" })
				@Html.ValidationMessageFor(model => model.mediumOfStudy, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>
				<input type="submit" value="Submit" />
				@Html.Partial("ElearnView")

			</td>
		</tr>
	</table>
}