@model OnlineElearningSystem.Models.LoginModel

@{
	ViewBag.Title = "Login";
}
@if (ViewBag.Message != null)
{
	Response.Write(ViewBag.Message);
}
<h2>Login</h2>
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
	<table>

		<tr>
			<td>userName</td>
			<td style="margin-top:100%;height:10%">
				@Html.TextBoxFor(model => model.userName, new { @maxlength = "50" })
				@Html.ValidationMessageFor(model => model.userName, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>password</td>
			<td style="margin-top:100%;height:10%">
				@Html.TextBoxFor(model => model.password, new { @maxlength = "30" })
				@Html.ValidationMessageFor(model => model.password, "", new { style = "color:red" })
			</td>
		</tr>
		<tr>
			<td>
				<input type="submit" runat="server" value="Login" />
			</td>
		</tr>
	</table>
}

